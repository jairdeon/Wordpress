// Área dedicada a documentação do Advanced Custom Fields e os códigos que eu mais utilizo.
// Documentação completa - http://www.advancedcustomfields.com/resources/code-examples/


// Adiciona página de Opções (Edite o "Informações" para trocar o nome da página.
if(function_exists('acf_add_options_page')) {
    $page = acf_add_options_page(array(
        'page_title'    => 'Informações',
        'menu_title'    => 'Informações',
        'menu_slug'     => 'informacoes',
        'capability'    => 'edit_posts',
        'redirect'  => false
    ));
}
